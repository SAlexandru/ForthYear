	private WebServer[] servers;

	@Before
	public void setUp()  {
		rand = new Random(10);
		servers = new WebServer[10];
		
		for (int i = 0; i < servers.length; ++i) {
			ServerSocket s;
			try {
				s = new ServerSocket(rand.nextInt(65535 - 1024) + 1025, 1000);
				servers[i] = new WebServer(s, Paths.get("./TestSite"), Paths.get("./TestSite/maitenance"), i + 3);
			} catch (IOException e) {
				e.printStackTrace();
			}
		}
	}

