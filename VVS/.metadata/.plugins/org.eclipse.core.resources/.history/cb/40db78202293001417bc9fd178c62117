package com.vvs.webserver;

import java.io.IOException;
import java.net.ServerSocket;
import java.nio.file.Paths;

public class Main {
	public static void main(String[] args) {
		try (WebServer server = new WebServer(new ServerSocket(8013, 100),
				Paths.get("/Users/salexandru/Desktop/"), 3);) {
			
			server.start();
			while (true)
				;
		} catch (IOException e) {
			e.printStackTrace();
		}
	}
}
