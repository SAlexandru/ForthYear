package com.vvs.webserver;

import java.io.OutputStream;
import java.nio.file.Path;
import java.util.StringTokenizer;

public class HttpResponse {
	private String response_;
	public HttpResponse (String request, Path base) {
		StringTokenizer tokenizer = new StringTokenizer(request);
		
		String method = tokenizer.nextToken();
		switch (method) {
			case "GET":  	break;
			default :
				response_ = "HTTP/1.1 400 Bad Request\r\n" +
							"Date: Sun, 18 Oct 2012 10:36:20 GMT\r\n" +
							"Server: vss webserver\r\n" +
							"Content-Length: 230\r\n" +
							"Content-Type: text/html; charset=iso-8859-1\r\n" +
							"Connection: Closed\r\n" +
							"\r\n" +
							"<!DOCTYPE HTML PUBLIC \"-//IETF//DTD HTML 2.0//EN\">\r\n" +
							"<html>\r\n" +
							"<head>\r\n" +
								"<title>501 Not implemented</title>\r\n" +
							"</head>\r\n" +
							"<body>\r\n" +
								"<h1>Not implemented</h1>\r\n" +
								"<p>Your browser sent a http request method that is not supported by this webserver.<p>\r\n" +
								"<p>Please use only HTTP GET!</p>" +
							"</body>\r\n" +
							"</html>\r\n";
				
		}
	}
	
	public void send(OutputStream out) {
		
	}
}
